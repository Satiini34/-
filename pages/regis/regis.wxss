.regis_header {
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
.regis_name {
  width: 90%;
  position: relative;
  left: 5%;
  display: flex;
  flex-direction: row;
  height: 40rpx;
  line-height: 24rpx;
  padding: 30rpx 0;
}
.sort_name {
  width: 15%;
  text-align: justify;
  text-align-last: justify;
  font-size: 24rpx;
  color: #3b4248;
  margin-top: 10rpx;
  font-weight: bold;
}
.name_input {
  margin-left: 64rpx;
  line-height: 24rpx;
  font-size: 24rpx;
}
.name_inputGender {
  left: 166rpx;
  line-height: 102rpx;
  font-size: 24rpx;
  height: 100rpx;
  width: 90%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.phoneAuthor {
  width: 200rpx;
  height: 66rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
  border: 1px solid #f1f1f1;
  position: absolute;
  border-radius: 10rpx;
  right: 0;
  padding: 0;
  z-index: 99;
  background: rgb(51, 181, 249);
  top: 50%;
  transform: translateY(-50%);
}
.horii {
  width: 100%;
  height: 1px;
  background: #f1f1f1;
}
.regis_bottom {
  width: 94%;
  position: relative;
  left: 3%;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.regisBottom_left {
  width: 330rpx;
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #33b5f9;
  border: 1px solid #33b5f9;
  box-sizing: border-box;
  text-align: center;
  border-radius: 40rpx;
  font-weight: bold;
}
.regisBottom_right {
  width: 330rpx;
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: #33b5f9;
  border: 1px solid #33b5f9;
  box-sizing: border-box;
  text-align: center;
  border-radius: 40rpx;
  font-weight: bold;
} 
.colorPicked {
  color: #333;
}
.colorNotPicked {
  color: rgb(128, 128, 128);
}