<canvas canvas-id="shareCanvas" style="width:600rpx;height:500rpx;position:relative;">
  <image src='{{photoSrc}}' />
  <movable-area style='width:100%;height:100%;position:absolute;top:0;left:0;'>
    <movable-view style="height: 50px; width: 50px;" x="{{x}}" y="{{y}}" direction="all" bindchange='change' bindscale="scale" scale-value='{{scaleValue}}'>
      <image src='../../img/submitSuccess.png' style='width:{{coverWidth}}px;height:{{coverWidth}}px;position:absolute' />
    </movable-view>
  </movable-area>
</canvas>

<view bindtap='bigger'>放大</view>
<view bindtap='smaller'>缩小</view>
<view bindtap='pickPhoto'>上传图片</view>
<view bindtap='tap'>点击保存</view>
<image src="{{src}}" style='width:600rpx;height:500rpx;'></image>
