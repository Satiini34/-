page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.test_header {
  width: 92%;
  position: relative;
  height: 164rpx;
  background: #fff;
}
.testNo {
  position: absolute;
  top: 70rpx;
  right: 0;
  font-size: 24rpx;
  color: rgb(153, 153, 153);
}
.testLine {
  width: 92%;
  height: 4rpx;
  position: relative;
  bottom: 0;
  left: 4%;
  background: rgb(224, 222, 227);
}
.testLineNow {
  height: 100%;
  position: absolute;
  left: 0;
  background: rgb(77, 175, 245);
}
.test_content {
  width: 100%;
  margin-top: 50rpx;
}
.test_content_question {
  position: absolute;
  width: 100%;
}
.test_content_question_topic {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 50rpx;
  position: relative;
  padding: 0 4%;
}
.test_content_question_answer {
  width: 100%;
  font-size: 26rpx;
  color: #333;
  padding: 40rpx 4%;
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}


.testBottom {
  width: 92%;
  left: 4%;
  bottom: 30rpx;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
}
.testBottom_left {
  width: 330rpx;
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #33b5f9;
  border: 1px solid #33b5f9;
  box-sizing: border-box;
  text-align: center;
  border-radius: 40rpx;
  font-weight: bold;
}
.testBottom_right {
  width: 330rpx;
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: #33b5f9;
  border: 1px solid #33b5f9;
  box-sizing: border-box;
  text-align: center;
  border-radius: 40rpx;
  font-weight: bold;
} 